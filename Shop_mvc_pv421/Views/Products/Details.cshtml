@model Product

<div class="row">
    <div class="col-md-5">
        <img src="@(Model.ImageUrl ?? "https://thumbs.dreamstime.com/b/no-image-icon-vector-available-picture-symbol-isolated-white-background-suitable-user-interface-element-205805243.jpg")"
             class="img-fluid rounded" alt="@Model.Title" />
    </div>

    <div class="col-md-7">
        <h1>@Model.Title</h1>

        <p class="lead">
            @if (Model.Discount > 0)
            {
                <span class="text-decoration-line-through">@Model.Price$</span>
                <span class="ms-2 fs-4">@((Model.Price * (100 - Model.Discount)) / 100)$</span>
                <span class="badge bg-danger ms-2">@Model.Discount% off</span>
            }
            else
            {
                <span class="fs-4">@Model.Price$</span>
            }
        </p>

        <p><strong>Category:</strong> @Model.Category?.Name</p>

        <p>
            <strong>Quantity:</strong>
            @if (Model.Quantity > 0)
            {
                <span class="badge bg-success">In Stock (@Model.Quantity)</span>
            }
            else
            {
                <span class="badge bg-secondary">Out of Stock</span>
            }
        </p>

        <h5>Description</h5>
        <p>@(String.IsNullOrWhiteSpace(Model.Description) ? "No description provided." : Model.Description)</p>

        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark">Back to Products</a>
            <a asp-controller="Cart" asp-action="Add" asp-route-id="@Model.Id" class="btn btn-success ms-2">Add to Cart</a>
        </div>
    </div>
</div>